<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.github.andriell.db.Product" table="product" catalog="store">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="site" column="site" type="string" length="32" not-null="true" index="index_product_code" unique-key="unique_product_code"/>
        <property name="code" column="code" type="string" length="32" not-null="true" index="index_product_code" unique-key="unique_product_code"/>
        <property name="name" column="name" type="text" index="index_product_name"/>
        <property name="url" column="url" type="text"/>
        <property name="price" column="price" type="float" index="index_product_price"/>
        <property name="currency" column="currency" type="string" length="3" index="index_product_currency"/>
        <property name="date" column="date" type="timestamp" index="index_product_date"/>
        <set name="property" table="product_property" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="product_id" not-null="true"/>
            </key>
            <one-to-many class="com.github.andriell.db.ProductProperty"/>
        </set>
    </class>
</hibernate-mapping>