<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="gui-main-frame" class="com.github.andriell.gui.MainFrame">
        <property name="manager" ref="manager"/>
        <property name="nashornWorkArea" ref="gui-nashorn-work-area" />
    </bean>

    <bean id="gui-nashorn-work-area" class="com.github.andriell.gui.NashornWorkArea">
        <property name="nashorn" ref="nashorn_js"/>
    </bean>

    <bean id="nashorn_js" class="com.github.andriell.nashorn.Nashorn"/>

    <bean id="process_js" class="com.github.andriell.processor.ProcessJs">
        <property name="nashorn" ref="nashorn_js"/>
    </bean>

    <bean id="limiter" class="com.github.andriell.processor.RunnableLimiter">
        <property name="limitProcess" value="4" />
    </bean>

    <bean id="manager" class="com.github.andriell.processor.Manager">
        <property name="fair" value="true" />
        <property name="capacity" value="100" />
        <property name="runnableLimiter" ref="limiter" />
    </bean>

</beans>