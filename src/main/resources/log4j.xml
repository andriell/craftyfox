<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">


    <appender name="appender1" class="com.github.andriell.gui.AdapterStack">
        <param name="AdapterId" value="1"/>
    </appender>
    <appender name="appender2" class="com.github.andriell.gui.AdapterStack">
        <param name="AdapterId" value="2"/>
    </appender>
    <appender name="appender3" class="com.github.andriell.gui.AdapterStack">
        <param name="AdapterId" value="3"/>
    </appender>

    <category name="org.apache.http">
        <priority value="INFO" />
        <appender-ref ref="appender3" />
    </category>
    <category name="org.apache.http.headers">
        <priority value="DEBUG" />
        <appender-ref ref="appender3" />
    </category>
    <category name="org.apache.http.wire">
        <priority value="DEBUG" />
        <appender-ref ref="appender3" />
    </category>

    <category name="org.hibernate.SQL">
        <priority value="INFO" />
        <appender-ref ref="appender2" />
    </category>
    <category name="org.hibernate.type">
        <priority value="TRACE" />
        <appender-ref ref="appender2" />
    </category>

    <root>
        <priority value="DEBUG"/>
        <appender-ref ref="appender1"/>
    </root>
</log4j:configuration>