<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.github.andriell.db.ProductProperty" table="product_property" catalog="store">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <many-to-one name="product" class="com.github.andriell.db.Product" fetch="select">
            <column name="product_id" not-null="true" unique-key="unique_code" />
        </many-to-one>
        <property name="name" column="name" type="string" length="32" not-null="true" index="index_product_property_name" unique-key="unique_code"/>
        <property name="isArray" column="is_array" type="string" length="1" not-null="false" index="index_product_property_is_array" unique-key="unique_code"/>
        <property name="integer" column="integer" type="integer" index="index_product_property_integer"/>
        <property name="float" column="float" type="float" index="index_product_property_float"/>
        <property name="string" column="string" type="string" index="index_product_property_string"/>
        <property name="text" column="text" type="text"/>
        <property name="date" column="date" type="date" index="index_product_property_date"/>
    </class>
</hibernate-mapping>